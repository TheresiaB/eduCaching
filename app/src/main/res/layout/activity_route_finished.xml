<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.life.educaching.Route1.Route1Finished">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:text="@string/text_fertig"
            android:ems="10"
            android:id="@+id/text_head"
            android:textSize="60sp"
            android:textColor="@color/colorWhite"
            android:background="@color/live_e.v._green"
            android:textStyle="bold"
            android:gravity="center_vertical|center_horizontal"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorGrey_lines"

            />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="465dp">



            <include layout="@layout/activity_maps" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey_lines"
            />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="130dp">

            <Button
                android:text="@string/button_auswertung"
                android:id="@+id/Auswertung"
                android:layout_width="410dp"
                android:layout_height="80dp"
                android:textSize="26sp"
                android:background="@drawable/button_border"
                android:textColor="@color/colorWhite"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                />

            <Button
                android:id="@+id/button_back"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:rotation="270"
                android:background="@drawable/selector_button"
                android:layout_marginTop="10dp"
                 />


        </RelativeLayout>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>