<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.life.educaching.VideoViewActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        >

        <include layout="@layout/activity_headline"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

        <TextView
            android:layout_width="645dp"
            android:layout_height="100dp"
            android:text="@string/Head_Text_Video"
            android:ems="10"
            android:id="@+id/editText2"
            android:textColor="@color/colorGrey_text"
            android:textSize="40sp"
            android:paddingStart="70dp"
            android:paddingLeft="70dp"
            android:paddingEnd="0dp"
            android:paddingRight="0dp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            />

        <Button
            android:id="@+id/video_play_button"
            android:text="@string/Play_Video"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/video_pause_button"
            android:text="@string/Pause_Video"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            />

        <Button
            android:id="@+id/video_begin_button"
            android:text="@string/Stop_Video"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            />

    </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="365dp">


            <TextView
                android:layout_width="900dp"
                android:layout_height="400dp"
                android:ems="10"
                android:id="@+id/editText3"
                android:text="@string/Lorem_Ipsum"
                android:textColor="@color/colorGrey_text"
                android:textSize="18sp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />


            <VideoView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/videoView"
                android:layout_weight="1"
                android:contentDescription="@string/layout_Video_Beschreibung"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                />

        </LinearLayout>



        <include
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/activity_button"/>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>