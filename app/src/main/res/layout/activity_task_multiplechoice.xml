<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.life.educaching.TaskMultipleChoiceActivity"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="1">

        <include layout="@layout/activity_header_green"/>


        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorGrey_lines"
            />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        >

            <TextView
                android:layout_width="700dp"
                android:layout_height="100dp"
                android:text="@string/Head_Text"
                android:ems="10"
                android:id="@+id/ueberschrift"
                android:textColor="@color/colorGrey_text"
                android:textSize="40sp"
                android:paddingStart="70dp"
                android:paddingLeft="70dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"

                android:gravity="center_vertical"
                android:textStyle="bold"
                />

            <TextView
                android:layout_width="600dp"
                android:layout_height="100dp"
                android:text="Welche der folgenden Aussagen ist richtig?"
                android:ems="10"
                android:id="@+id/Frage"
                android:textColor="@color/colorGrey_text"
                android:textSize="20sp"
                android:paddingStart="70dp"
                android:paddingLeft="70dp"
                android:paddingEnd="0dp"
                android:paddingRight="0dp"

                android:gravity="center_vertical"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="365dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:ems="10"
                android:id="@+id/Text_information_bild"
                android:text="@string/Lorem_Ipsum"
                android:textColor="@color/colorGrey_text"
                android:textSize="18sp"
                android:layout_marginStart="70dp"
                android:layout_marginLeft="70dp"
                android:layout_marginEnd="70dp"
                android:layout_marginRight="70dp"
                android:layout_gravity="center_horizontal"
                android:layout_weight="1" />


            <RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/radioGroup"
                android:layout_width="500dp"
                android:layout_height="match_parent"
                android:weightSum="1">
                <RadioButton android:id="@+id/antwort_A"
                    android:layout_width="400dp"
                    android:layout_height="70dp"
                    android:textSize="18sp"
                    android:text="Das Wasser perlt ab und dringt nicht in das Blatt ein."
                    />
                <RadioButton android:id="@+id/antwort_B"
                    android:layout_width="400dp"
                    android:layout_height="70dp"
                    android:textSize="18sp"
                    android:text="Das Blatt saugt das Wasser vollkommen ein und wird dick und nass."
                    />
                <RadioButton android:id="@+id/antwort_C"
                    android:layout_width="400dp"
                    android:layout_height="70dp"
                    android:textSize="18sp"
                    android:text="Das Blatt fÃ¤ngt an zu schrumpfen"
                    />
                <RadioButton android:id="@+id/antwort_D"
                    android:layout_width="400dp"
                    android:layout_height="70dp"
                    android:textSize="18sp"
                    android:text="Das Wasser dringt teilweise ein."
                     />
                <Button
                    android:id="@+id/btnDisplay"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:text="Click Here" />
            </RadioGroup>




        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorGrey_lines"
            />

        <include
            android:id="@+id/footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            layout="@layout/activity_button_next_back"/>


    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>