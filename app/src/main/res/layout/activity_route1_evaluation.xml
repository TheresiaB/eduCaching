<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.life.educaching.Route1.Route1_EvaluationActivity"    >

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/activity_header_green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorGrey_lines" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/finishflag"
                        android:gravity="right"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auswertung der Gruppe: "
                        android:gravity="left"
                        android:textColor="@color/colorGrey_text"
                        android:textSize="25sp"
                        android:padding="20dp"/>

                    <TextView
                        android:id="@+id/groupNameR1"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Teamname"
                        android:gravity="left"
                        android:textColor="@color/colorGrey_text"
                        android:textSize="25sp"
                        android:padding="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Station 1: Lotuseffekt testen"
                            android:ems="10"
                            android:id="@+id/Aufgaben_Text1"
                            android:textColor="@color/colorGrey_text"
                            android:textSize="25sp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="40dp"
                            android:gravity="left"
                            android:layout_weight="0.57" />

                        <VideoView
                            android:id="@+id/StationVideoR1S1"
                            android:layout_width="match_parent"
                            android:layout_height="273dp"
                            android:contentDescription="@string/layout_Video_Beschreibung"
                            android:layout_marginStart="70dp"
                            android:layout_marginEnd="70dp" />


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:gravity="center">


                            <ImageButton
                                android:id="@+id/video_play_buttonR1S1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/playbutton" />

                            <ImageButton
                                android:id="@+id/video_pause_buttonR1S1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/pausebutton"
                                android:layout_weight="0.00" />

                            <ImageButton
                                android:id="@+id/video_stop_buttonR1S1"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/stopbutton" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="434dp"
                            android:layout_height="50dp"
                            android:text="Station 3: Optik"
                            android:ems="10"
                            android:id="@+id/Aufgaben_Text2"
                            android:textColor="@color/colorGrey_text"
                            android:textSize="25sp"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="80dp"
                            android:gravity="left"
                            />


                        <TextView
                            android:id="@+id/stationR1S3answer"
                            android:layout_width="450dp"
                            android:weightSum="1"
                            android:background="@drawable/spinner_border"
                            android:layout_height="273dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="15dp"
                            android:textSize="20sp"
                            android:text="Hier steht eure Antwort"
                            />

                        <LinearLayout
                            android:layout_width="450dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="80dp">

                            <ImageButton
                            android:id="@+id/audioPlay"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:layout_marginTop="10dp"
                            android:background="@drawable/playrecord" />

                        <ImageButton
                            android:id="@+id/audioPause"
                            android:layout_width="50dp"
                            android:layout_height="50dp"
                            android:enabled="false"
                            android:layout_marginTop="10dp"
                            android:layout_marginLeft="30dp"
                            android:background="@drawable/pausebutton" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Station 2: StraÃŸenlampen"
                            android:ems="10"
                            android:id="@+id/Aufgaben_Text3"
                            android:textColor="@color/colorGrey_text"
                            android:textSize="25sp"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="80dp"
                            android:gravity="left"
                            />

                        <VideoView
                            android:id="@+id/StationVideoR1S2"
                            android:layout_width="match_parent"
                            android:layout_height="273dp"
                            android:contentDescription="@string/layout_Video_Beschreibung"
                            android:layout_marginStart="70dp"
                            android:layout_marginEnd="70dp"
                            />



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:gravity="center">


                            <ImageButton
                                android:id="@+id/video_play_buttonR1S2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/playbutton" />

                            <ImageButton
                                android:id="@+id/video_pause_buttonR1S2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/pausebutton"
                                android:layout_weight="0.00" />

                            <ImageButton
                                android:id="@+id/video_stop_buttonR1S2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/stopbutton" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="434dp"
                            android:layout_height="50dp"
                            android:text="Station 4: Der Natur abgeschaut"
                            android:ems="10"
                            android:id="@+id/Aufgaben_Text4"
                            android:textColor="@color/colorGrey_text"
                            android:textSize="25sp"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="80dp"
                            android:gravity="left"
                            />


                            <ImageView
                                android:id="@+id/auswertungFoto"
                                android:layout_width="480dp"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:layout_marginLeft="80dp"
                                android:layout_marginTop="20dp"
                                android:weightSum="1" />



                    </LinearLayout>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="Route beenden"
                        android:id="@+id/Auswertung"
                        android:layout_width="410dp"
                        android:layout_height="80dp"
                        android:textSize="26sp"
                        android:background="@drawable/button_border"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="40dp"/>
                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>