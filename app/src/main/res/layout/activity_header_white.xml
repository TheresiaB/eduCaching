<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:background="@color/colorGrey_lines"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@color/colorWhite"
        android:weightSum="1"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="214dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/machgruen"
            android:id="@+id/machgruen_logo"
            android:contentDescription="@string/layout_Bild_Beschreibung"
            android:layout_gravity="center_horizontal"
            android:padding="5dp"
            android:layout_marginLeft="25dp"
            />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/lifelogo"
            android:id="@+id/life_logo"
            android:contentDescription="@string/layout_Bild_Beschreibung"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:padding="10dp"
             />


        <ImageView
            android:layout_width="281dp"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/bbne"
            android:id="@+id/bbne_logo"
            android:contentDescription="@string/layout_Bild_Beschreibung"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:padding="20dp"
            android:layout_marginRight="25dp"
            />

    </LinearLayout>

</FrameLayout>

