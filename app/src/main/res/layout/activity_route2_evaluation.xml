<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="com.life.educaching.Route2.Route2_EvaluationActivity"    >

    <TextView
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <include layout="@layout/activity_header_green" />

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="@color/colorGrey_lines" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:overScrollMode="never">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/finishflag"
                        android:gravity="right"
                        android:padding="10dp"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Auswertung der Gruppe: "
                        android:gravity="left"
                        android:textColor="@color/colorGrey_text"
                        android:textSize="25sp"
                        android:padding="20dp"/>

                    <TextView
                        android:id="@+id/groupName"
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:text="Teamname"
                        android:gravity="left"
                        android:textColor="@color/colorGrey_text"
                        android:textSize="25sp"
                        android:padding="20dp"
                        android:textStyle="bold"/>

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">


                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:weightSum="1">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="46dp"
                            android:text="Station 1: Lotuseffekt testen"
                            android:ems="10"
                            android:id="@+id/Aufgaben_Text1"
                            android:textColor="@color/colorGrey_text"
                            android:textSize="25sp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="40dp"
                            android:gravity="left" />

                        <VideoView
                            android:id="@+id/StationVideo1"
                            android:layout_width="match_parent"
                            android:layout_height="273dp"
                            android:contentDescription="@string/layout_Video_Beschreibung"
                            android:layout_marginStart="70dp"
                            android:layout_marginEnd="70dp" />


                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:gravity="center">


                            <ImageButton
                                android:id="@+id/video_play_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/playbutton" />

                            <ImageButton
                                android:id="@+id/video_pause_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/pausebutton"
                                android:layout_weight="0.00" />

                            <ImageButton
                                android:id="@+id/video_stop_button"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/stopbutton" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="434dp"
                            android:layout_height="50dp"
                            android:text="Station 3: Optik"
                            android:ems="10"
                            android:id="@+id/Aufgaben_Text2"
                            android:textColor="@color/colorGrey_text"
                            android:textSize="25sp"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="80dp"
                            android:gravity="left"
                            />


                        <TextView
                            android:id="@+id/station3answer"
                            android:layout_width="500dp"
                            android:weightSum="1"
                            android:background="@drawable/spinner_border"
                            android:layout_height="273dp"
                            android:layout_marginLeft="80dp"
                            android:layout_marginTop="5dp"
                            android:textSize="20sp"
                            android:text="Hier steht eure Antwort"
                            />

                        <LinearLayout
                            android:layout_width="450dp"
                            android:layout_height="60dp"
                            android:layout_marginLeft="230dp">

                            <ImageButton
                                android:id="@+id/audioPlayR2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="10dp"
                                android:background="@drawable/playrecord" />

                            <ImageButton
                                android:id="@+id/audioPauseR2"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:enabled="false"
                                android:layout_marginTop="10dp"
                                android:layout_marginLeft="30dp"
                                android:background="@drawable/pausebutton" />

                        </LinearLayout>


                    </LinearLayout>

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1">



                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="50dp"
                            android:text="Station 2: Straßenlampen"
                            android:ems="10"
                            android:id="@+id/Aufgaben_Text3"
                            android:textColor="@color/colorGrey_text"
                            android:textSize="25sp"
                            android:layout_marginTop="40dp"
                            android:layout_marginLeft="80dp"
                            android:gravity="left"
                            />

                        <VideoView
                            android:id="@+id/StationVideo2"
                            android:layout_width="match_parent"
                            android:layout_height="273dp"
                            android:contentDescription="@string/layout_Video_Beschreibung"
                            android:layout_marginStart="70dp"
                            android:layout_marginEnd="70dp"
                            />



                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:weightSum="1"
                            android:gravity="center">


                            <ImageButton
                                android:id="@+id/video_play_button3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/playbutton" />

                            <ImageButton
                                android:id="@+id/video_pause_button3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/pausebutton"
                                android:layout_weight="0.00" />

                            <ImageButton
                                android:id="@+id/video_stop_button3"
                                android:layout_width="50dp"
                                android:layout_height="50dp"
                                android:background="@drawable/stopbutton" />


                        </LinearLayout>

                        <TextView
                            android:layout_width="434dp"
                            android:layout_height="50dp"
                            android:text="Station 4: Der Natur abgeschaut"
                            android:ems="10"
                            android:id="@+id/Aufgaben_Text4"
                            android:textColor="@color/colorGrey_text"
                            android:textSize="25sp"
                            android:layout_marginTop="50dp"
                            android:layout_marginLeft="80dp"
                            android:gravity="left"
                            />

                        <RadioGroup
                            android:id="@+id/radioGroup"
                            android:layout_width="480dp"
                            android:layout_height="450dp"
                            android:background="@drawable/spinner_border"
                            android:gravity="center"
                            android:layout_marginLeft="80dp"
                            android:weightSum="1"
                            >

                            <RadioButton android:id="@+id/antwort_A"
                                android:layout_width="400dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:textSize="15sp"
                                android:text="Das Wasser perlt ab und dringt nicht in das Blatt ein."
                                />
                            <RadioButton android:id="@+id/antwort_B"
                                android:layout_width="400dp"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:textSize="15sp"
                                android:text="Das Blatt saugt das Wasser vollkommen ein und wird dick und nass."
                                />

                            <RadioButton android:id="@+id/antwort_D"
                                android:layout_width="400dp"
                                android:layout_height="50dp"
                                android:textSize="15sp"
                                android:layout_marginTop="5dp"
                                android:text="Das Wasser dringt teilweise ein."
                                />

                            <RadioButton android:id="@+id/antwort_C"
                                android:layout_width="400dp"
                                android:layout_height="50dp"
                                android:textSize="15sp"
                                android:layout_marginTop="5dp"
                                android:text="Das Blatt fängt an zu schrumpfen"
                                />

                            <TextView
                                android:layout_width="350dp"
                                android:layout_height="40dp"
                                android:layout_marginTop="10dp"
                                android:text="Eure Antwort war:"/>

                            <TextView
                                android:id="@+id/station4answer"
                                android:layout_width="350dp"
                                android:layout_height="40dp"
                                android:text="ANTWORT"
                                android:textSize="15sp"
                                android:textColor="@color/live_e.v._green"
                                android:layout_marginBottom="5dp"
                                />



                        </RadioGroup>



                    </LinearLayout>


                </LinearLayout>

                <Space
                    android:layout_width="match_parent"
                    android:layout_height="50dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:text="Route beenden"
                        android:id="@+id/route2Beenden"
                        android:layout_width="410dp"
                        android:layout_height="80dp"
                        android:textSize="26sp"
                        android:background="@drawable/selector_button_normal"
                        android:textColor="@color/colorWhite"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_margin="40dp"
                        android:enabled="true"/>

                </RelativeLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.design.widget.CoordinatorLayout>